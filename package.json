{
  "name": "reading-audiobook-app",
  "version": "1.0.0",
  "description": "An app that processes readings with LLama Parse, adds Gemini AI summaries, and converts to audio with Gemini TTS",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@google/genai": "^1.16.0",
    "@supabase/supabase-js": "^2.57.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "openai": "^5.19.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "tesseract.js": "^6.0.1",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
